#include <iostream>
using namespace std;

int main() {
    int n,a;
    cout << "Enter number of days for player 1: ";
    cin >> n;
    int scores[n];  
    cout << "Enter score of each day:\n";
    for (int i = 0; i < n; i++) 
    {  
        cout<<"DAY "<< i+1 <<":" ;
        cin >> scores[i];         
    }
    
    for (int i = 0; i < n; i++)
    {
		for (int j = 0; j < n-i-1; j++)
		{
			if (scores[j] < scores[j+1])
			{
				a=scores[j];
				scores[j]=scores[j+1];
				scores[j+1]=a;
			}
		}
			
	}
	
    cout<<"sorted score: ";
    for (int i=0; i<n;i++) 
    {
		cout<<scores[i]<< "\t";
		}
		
// for player 2		
	cout << "\nEnter number of days for player 2: ";
    cin >> n;
    int scores2[n];  
    cout << "Enter score of each day:\n";
    for (int i = 0; i < n; i++) 
    {  
        cout<<"DAY "<< i+1 <<":" ;
        cin >> scores2[i];         
    }
    
    for (int i = 0; i < n; i++)
    {
		for (int j = 0; j < n-i-1; j++)
		{
			if (scores2[j] < scores2[j+1])
			{
				a=scores2[j];
				scores2[j]=scores2[j+1];
				scores2[j+1]=a;
			}
		}
			
	}
	
    cout<<"sorted score: ";
    for (int i=0; i<n;i++) 
    {
		cout<<scores2[i]<< "\t";
		}
// to declare winner
if(scores[0]>scores2[0])
{
	cout<<"\nHurrayyy!!!The winner is player 1.";
	}
else if(scores[0]==scores2[0])
{
	cout<<"\nIt's a tie...";
}
else
{
    cout<<"\nHurrayyy!!!The winner is player 1.";
}
return 0;

}
