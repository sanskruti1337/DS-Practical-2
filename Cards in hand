#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of cards: ";
    cin >> n;

    int cards[100];  // assuming max 100 cards
       cout << "Enter the cards (numbers): ";
    for (int i = 0; i < n; ++i) {
        cin >> cards[i];
    }

    for (int i = 1; i < n; ++i) {
        int key = cards[i]; // Step 4
        int j = i - 1;

            while (j >= 0 && cards[j] > key) {
            cards[j + 1] = cards[j];
            j--;
        }

               cards[j + 1] = key;

                cout << "Hand after inserting card " << key << ": ";
        for (int k = 0; k <= i; ++k) {
            cout << cards[k] << " ";
        }
        cout << endl;
    }

     cout << "Final sorted hand: ";
    for (int i = 0; i < n; ++i) {
        cout << cards[i] << " ";
    }
    cout << endl;

       return 0;
}
